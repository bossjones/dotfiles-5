[core]
	editor         = vim
	autocrlf       = input
	whitespace     = trailing-space,space-before-tab
	excludesfile   = ~/.gitignore_global

[color]
	ui             = auto

[alias]
	unstage        = reset HEAD --
	last           = log -1 HEAD
	co             = checkout
	st             = status
	lg             = log --graph --color --all --decorate
	lgo            = log --graph --color --all --pretty=oneline-author
	ci             = commit
	a              = add
	d              = diff

[push]
	default        = current

[pretty]
	oneline-author = "%C(auto)%h%d %Cblue%an %Creset%s"

