# vi: ft=muttrc

set my_bg=default

color hdrdefault blue black

color quoted blue black

color signature brightmagenta $my_bg

color attachment black green
color message white $my_bg
color error red $my_bg

color indicator brightcyan black
mono indicator reverse

color status brightcyan black

color tree brightblue $my_bg
color normal white $my_bg
color markers brightcyan $my_bg
color search brightwhite magenta
color tilde green $my_bg

# color body brightwhite black '\*+[^*]+\*+'
# color body brightwhite black '_+[^_]+_+'

color index white $my_bg "*"
color index brightcyan $my_bg ~N
color index brightred $my_bg ~O
color index brightyellow $my_bg ~F
color index black green ~T
color index brightred $my_bg ~D
mono index bold ~N
mono index bold ~F
mono index bold ~T
mono index bold ~D

## Highlights inside the body of a message.

## URLs
color body brightgreen $my_bg "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
color body brightgreen $my_bg "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
mono body bold "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
mono body bold "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"

## Email addresses.
color body brightgreen $my_bg "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

## Header
color header green $my_bg "^from:"
color header green $my_bg "^to:"
color header green $my_bg "^cc:"
color header green $my_bg "^date:"
color header yellow $my_bg "^newsgroups:"
color header yellow $my_bg "^reply-to:"
color header brightcyan $my_bg "^subject:"
color header red $my_bg "^x-spam-rule:"
color header green $my_bg "^x-mailer:"
color header yellow $my_bg "^message-id:"
color header yellow $my_bg "^Organization:"
color header yellow $my_bg "^Organisation:"
color header yellow $my_bg "^User-Agent:"
color header yellow $my_bg "^message-id: .*pine"
color header yellow $my_bg "^X-Fnord:"
color header yellow $my_bg "^X-WebTV-Stationery:"

color header red $my_bg "^x-spam-rule:"
color header green $my_bg "^x-mailer:"
color header yellow $my_bg "^message-id:"
color header yellow $my_bg "^Organization:"
color header yellow $my_bg "^Organisation:"
color header yellow $my_bg "^User-Agent:"
color header yellow $my_bg "^message-id: .*pine"
color header yellow $my_bg "^X-Fnord:"
color header yellow $my_bg "^X-WebTV-Stationery:"
color header yellow $my_bg "^X-Message-Flag:"
color header yellow $my_bg "^X-Spam-Status:"
color header yellow $my_bg "^X-SpamProbe:"
color header red $my_bg "^X-SpamProbe: SPAM"

## Coloring quoted text - coloring the first 7 levels:
color quoted cyan $my_bg
color quoted1 yellow $my_bg
color quoted2 red $my_bg
color quoted3 green $my_bg
color quoted4 cyan $my_bg
color quoted5 yellow $my_bg
color quoted6 red $my_bg
color quoted7 green $my_bg

color bold brightyellow $my_bg
#color underline magenta $my_bg

mono bold bold
mono underline underline
