# vi: ft=muttrc

bind index <space> collapse-thread

# vim-like navigation
bind pager k previous-line
bind pager j next-line
bind pager gg top
bind pager G bottom
bind pager R group-reply

bind index gg first-entry
bind index G last-entry

bind attach <return> view-mailcap

macro index \e1 ":set from=jjin082693@gmail.com<enter>" "switch to jjin082693@gmail.com"
macro index \e2 ":set from=jonathan@jjin.me<enter>" "switch to jonathan@jjin.me"
macro index \e3 ":set from=jjin082693@uchicago.edu<enter>" "switch to jjin082693@uchicago.edu"

macro index,pager a "<pipe-message>goobook add<return>" "add sender to google contacts"
bind editor <Tab> complete-query
